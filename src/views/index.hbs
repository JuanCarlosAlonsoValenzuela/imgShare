<div class="card">
    <div class="card-header bg-dark">
        <h3 class="card-title text-white">
                <i class="far fa-image"></i> Upload an Image
        </h3>
    </div>

    <div class="card-body">
        <!-- Creamos el formulario para a침adir im치genes -->
        <form action="/images" method="POST" enctype="multipart/form-data">     <!--NUEVO NUEVO NUEVO -->
            <div class="form-group">
                <div class="custom-file">
                    <input type="file" name="image" class="custom-file-input" id="inputGroup" aria-describedby="inputGroupFileAddon" required>
                    <label class="custom-file-label" for="inputGroupFile">Choose file</label>
                </div>
            </div>
            <div class="form-group">
                <input type="text" name="title" class="form-control" placeholder="Title for the image" required>
            </div>
            <div class="form-group">
                <textarea name="description" rows="2" class="form-control" placeholder="Description for the image" required></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-success">
                    <i class="fa fa-upload"></i></i>Upload Image
                </button>
            </div>
        </form>

    </div>

</div>

<!-- A침adimos las im치genes -->
<div class="card mt-2">
    <div class="card-header bg-dark text-white">
        <h3> <i class="far fa-images"></i>Recent Uploads</h3>
    </div>

    <div class="card-body">
        <div class="row">
            {{#each images}}
                <div class="col-md-4">
                    <a href="/images/{{filename}}">
                        <img src="/public/upload/{{filename}}" alt="Alternativa" class="w-100 h-100 img-thumbnail">
                    </a> 
                </div>
            {{/each}}
        </div>
        
    </div> 
</div>


